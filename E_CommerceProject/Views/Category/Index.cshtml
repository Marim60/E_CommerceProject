@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<br />
<a href="/Category/Add" class="btn btn-outline-secondary">Add Category</a>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <th>@d.Id</th>
                <td>@d.Name</td>

                <td>@Html.ActionLink("Edit","Edit","Category", new{id = d.Id}, new{@class="btn btn-outline-info"})</td>
                <td><a class="btn btn-outline-danger" onclick="confirmDelete(@d.Id)">Delete</a></td>

            </tr>
        }

    </tbody>
</table>
<script>
    function confirmDelete(insId) {
        var result = confirm("Are you sure you want to delete this Category?");
        if (result) {
            window.location.href = "/Category/Delete/" + insId;
        }
    }
</script>